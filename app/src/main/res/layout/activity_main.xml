<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/headerImageView"
        android:layout_width="wrap_content"
        android:layout_height="219dp"
        android:scaleType="centerCrop"
        android:src="@drawable/andrea" />

    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="391dp"
        android:layout_height="82dp"
        android:layout_below="@id/headerImageView"
        android:layout_marginTop="10dp"
        android:padding="16dp"
        android:text="Bienvenido/a a nuestro servicio online!"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="italic"/>

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:layout_below="@id/headerTextView"
        android:layout_marginTop="10dp"
        android:background="@drawable/fondo_boton"
        android:hint="                                Username"
        android:shadowColor="#E91E63"
        android:textColor="#E91E63"
        android:textColorHint="#E91E63"
        android:textColorLink="#E91E63" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_below="@id/usernameEditText"
        android:layout_marginTop="7dp"
        android:background="@drawable/fondo_boton"
        android:hint="                                Password"
        android:inputType="textPassword"
        android:textColorHint="#E91E63" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Coger Cita" />

    <Button
        android:id="@+id/guestButton"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Acceder como invitado/a" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/guestButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Registrate!" />

    <Button
        android:id="@+id/NosotrosButton"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/guestButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="Sobre Nosotros!" />

</RelativeLayout>
